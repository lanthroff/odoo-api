<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="example.car_tree">
      <field name="name">Car list</field>
      <field name="model">example.cars</field>
      <field name="arch" type="xml">
        <tree>
          <field name="owner"/>
          <field name="brand"/>
          <field name="model"/>
          <field name="number"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="example.car_action_window">
      <field name="name">Cars</field>
      <field name="res_model">example.cars</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Example" id="example.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Cars" id="example.menu_car" parent="example.menu_root" action="example.car_action_window"/>
  </data>
</odoo>